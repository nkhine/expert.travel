  xmlns:stl="http://xml.itools.org/namespaces/stl">
<!-- user's details -->
<div class="yui-gc user">
    <div class="yui-u first">
        <stl:block if="not lastname">
        <h2>Personnal Details</h2>
        </stl:block>
        <stl:block if="lastname">
        <h2>${firstname} ${lastname}</h2>
        </stl:block>
        <dt>${email}</dt>
