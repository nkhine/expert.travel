                <select name="abakuc:region">
                <option>[Select One]</option>
                    <optgroup stl:repeat="region regions"
                    value="${region/label}">
                    <option stl:repeat="county region/counties" 
                    value="${county/id}" selected="${county/is_selected}">
                    ${county/label}</option>
                    </optgroup>
                </select>
            </dd>
            </dl> -->
        <dl>
            <dt><label for="abakuc:phone">Phone Number</label></dt>
            <dd>
            <input type="text" size="40" name="abakuc:phone"
            value="${phone}" />
            </dd>
        </dl>
        <dl>
            <dt><label for="abakuc:fax">Fax Number</label></dt>
            <dd>
            <input type="text" size="40" name="abakuc:fax"
            value="${fax}" />
            </dd>
        </dl>
        <p><input type="submit" value="Modify Company" class="button_ok" /></p>
    </form>
</stl:block>
