    <h1>Branch modification</h1>
    <form action=";edit_metadata" method="post">
        <dl>
            <dt><label for="abakuc:address">Address</label></dt>
            <dd>
            <input type="text" size="40" name="abakuc:address"
            value="${address}" />
            </dd>
        </dl>
        <dl>
            <dt><label for="abakuc:street">Street Name</label></dt>
            <dd>
            <input type="text" size="30" name="abakuc:street"
            value="${street}" /> (* optional field)
            </dd>
        </dl>
        <dl>
            <dt><label for="abakuc:city">City</label></dt>
            <dd>

            <input type="text" size="40" name="abakuc:city"
            value="${post_town}" />
            </dd>
        </dl>
        <dl>
            <dt><label for="abakuc:postcode">Post Code</label></dt>
            <dd>
            <input type="text" size="10" name="abakuc:postcode"
            value="${post_code}" />
            </dd>
        </dl>
        <dl>
            <dt><label for="abakuc:uk_or_nonuk">UK or Non UK</label></dt>
            <dd>

               <stl:block repeat="x uk_or_nonuk">
                    <input type="radio" name="abakuc:uk_or_nonuk"
                           value="${x/name}" checked="${x/selected}" />
                           ${x/name}
                </stl:block>
            </dd> 
        </dl>
        <!-- <dl>
            <dt><label for="abakuc:region">Region</label></dt>
