<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<stl:block xmlns="http://www.w3.org/1999/xhtml"
  xmlns:stl="http://xml.itools.org/namespaces/stl">

  <div>
    <stl:block> 
      <h1>Job ${dc:title}</h1>
      <dl>  
        <dt>
          <a href="../">
          Informations about the company
          </a>
        </dt>
        <dt>
          Title :
        </dt>
        <dd>
          ${dc:title} 
        </dd>
        <dt>
          Function
        </dt>
        <dd>
          ${abakuc:function} 
        </dd>
        <dt>
          Short Description :
        </dt>
        <dd>
          ${dc:description} 
        </dd>
        <dt>
          Description
        </dt>
        <dd>
          ${abakuc:job_text} 
        </dd>
        <dt>
          Closing date
        </dt>
        <dd>
          ${abakuc:closing_date} 
        </dd>
        <dt>
          Salary Range
        </dt>
        <dd>
          ${abakuc:salary} 
        </dd>
        <dd>
          <a href=";new_resource_form?type=Candidature">Apply for the job</a>
        </dd>
      </dl>       
    </stl:block>
    <stl:block stl:if="reviewers">
      <h1>
        <a href=";edit_metadata_form">
          Edit the job
        </a>
      </h1>
    </stl:block>
    <stl:block stl:if="reviewers">
        <h1>Users who applied</h1>
        
        <p stl:if="nb_candidatures">
          ${nb_candidatures} candidatures, 
          <a href=";view_candidatures">
          &nbsp;Click it to see
          </a>
        </p>

        <p stl:if="not nb_candidatures">
          No candidatures
        </p>

    </stl:block>
  </div>

</stl:block>
