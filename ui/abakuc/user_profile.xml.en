          </div>
          </div>
          <!-- Second TAB -->
          <!-- Second TAB -->
					<div style="background-color: transparent; width: 100px; height: 21px; left: 110px; margin-left: 0px;" class="dhx_tab_element dhx_tab_element_inactive">
					<div style="position: absolute; top: 0px; left: 0px; width: 3px; height: 23px;"><img src="/ui/uktravel/images/p_left.gif" /></div>
					<div style="position: absolute; top: 0px; right: 0px; width: 18px; height: 23px;"><img src="/ui/uktravel/images/p_right_skos.gif" /></div>
					<div style="position: absolute; background-repeat: repeat-x; background-image: url(/ui/uktravel/images/p_middle.gif); height: 23px; top: 0px; left: 3px; width: 79px;">
