  <form enctype="multipart/form-data" action=";edit_metadata" method="post">
    <table class="form">
      <tr>
        <th>Title</th>
        <td colspan="4">
          <input type="text" size="50" name="dc:title"
                 value="${title}" />
        </td>
      </tr>
      <tr>
        <th>Description</th>
        <td colspan="4">
          <textarea cols="50" rows="8"
            name="dc:description">${description}</textarea>
        </td>
      </tr>
