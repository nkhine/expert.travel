    <tr>
      <th>Upload/update image</th>
      <td>
        <input name="remove_logo" type="checkbox"/>Remove image
      </td>
    </tr>
    <tr>
      <th></th>
      <td>  
        <input name="logo" type="file" size="35"/><br />
         Acceptable formats: .gif, .jpg, .png, .swf
      </td>
    </tr>
