    <tr>
        <th>Banner URL</th>
        <td>
          <input type="text" size="30" name="abakuc:banner_website"
                 value="${banner_website}" />
        </td>
      </tr>
      <tr>
        <th>Banner type</th>
        <td>
          <select name="abakuc:banner_type">
           <option stl:repeat="item banner_type" value="${item/name}"
             selected="${item/selected}">${item/label}</option>
           </select>
        </td>
      </tr>

      <!-- Target window -->
      <tr>
        <th>Banner target</th>
        <td>
          <select name="abakuc:banner_target">
            <option stl:repeat="item banner_target" value="${item/name}"
              selected="${item/selected}">${item/label}</option>
          </select>
        </td>
      </tr>

      <!-- Banner slot placement-->
    <!-- max_click -->
    <tr>
      <th>Banner Max click</th>
      <td>
        <input type="text" size="5" name="abakuc:banner_max_click"
          value="${banner_max_click}" />
      </td>
    </tr>
    <!-- weight -->
    <tr>
      <th> Banner weight </th>
      <td colspan="2">
        <select name="abakuc:banner_weight">
          <option stl:repeat="weight all_weight"
            selected="${weight/is_selected}">${weight/name}</option>
        </select>
      </td>
    </tr>
    <!-- count -->
    <tr>
      <th> Banner count </th>
      <td>
        <input type="text" size="4" name="abakuc:banner_count"
          value="${banner_count}" />
      </td>
    </tr>

    <!-- Banner maximum clicks -->
      <tr>
        <td>
          <input type="submit" value="Update" />
        </td>
      </tr>
    </table>
